<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css"
      rel="stylesheet"
    />

    <title>Crud</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled">Disabled</a>
            </li>
          </ul>
          <form class="d-flex">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>
    <% if (user) { %>
    <div class="container mt-4">
      <div class="card border-secondary">
        <div class="card-header">Editar</div>
        <div class="card-body">
          <form action="/update" method="POST">
            <input id="id" name="id" value="<%= user.id %>" hidden>
            <div class="mb-3">
              <label for="user" class="form-label">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="user"
                name="user"
                value="<%= user.user %>"
                tabindex="1"
              />
            </div>
            <div class="mb-3">
              <label for="user" class="form-label">Profesion</label>
              <select name="rol" id="rol" class="form-select" tabindex="2">
                <option <%= user.rol=='Ingeniero' ? "Selected" : '' %> value="ingeniero">Ingeniero</option>
                <option <%= user.rol=='TecConstruccion' ? "Selected" : '' %> value="TecConstruccion">TecConstruccion</option>
                <option <%= user.rol=='Telecomunicaciones' ? "Selected" : '' %> value="Telecomunicaciones">Telecomunicaciones</option>
                <option <%= user.rol=='Químico' ?  "Selected" : '' %> value="Químico">Químico</option>
                <option <%= user.rol=='Electricista' ?  "Selected" : '' %> value="Electricista">Electricista</option>
                <option <%= user.rol=='Técnico de sonido' ?  "Selected" : '' %> value="Técnico de sonido">Técnico de sonido</option>
                <option <%= user.rol=='Periodista' ?  "Selected" : '' %> value="Periodista">Periodista</option>
                <option <%= user.rol=='Enfermero' ?  "Selected" : '' %> value="Enfermero">Enfermero</option>
                <option <%= user.rol=='Psicólogo' ?  "Selected" : '' %> value="Psicólogo">Psicólogo</option>
                <option <%= user.rol=='Técnico en turismo' ?  "Selected" : '' %> value="Técnico en turismo">Técnico en turismo</option>
                <option <%= user.rol=='Historiador' ?  "Selected" : '' %> value="Historiador">Historiador</option>
                <option <%= user.rol=='Politólogo' ?  "Selected" : '' %> value="Politólogo">Politólogo</option>
                <option <%= user.rol=='Contador' ?  "Selected" : '' %> value="Contador">Contador</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="user" class="form-label" value="edad">Edad</label>
              <input
                type="text"
                class="form-control"
                id="edad"
                name="edad"
                tabindex="3"
              />
            </div>
            <div class="mb-3">
                <label for="user" class="form-label">Email</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                  tabindex="4"
                />
              </div>
              <div class="mb-3">
                <label for="user" class="form-label">Salario</label>
                <input
                  type="text"
                  class="form-control"
                  id="salario"
                  name="salario"
                  tabindex="4"
                />
              </div>
            <button type="submit" class="btn btn-primary" tabindex="5">
              Guardar
            </button>
            <a href="/" class="btn btn-secondary">Cancelar</a>
          </form>
        </div>
      </div>
    </div>
    <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
